# Calendar Settings (optional, defaults shown)
CALENDAR_PROVIDER="manual"  # Options: manual, google, outlook
CALENDAR_WORK_START="9"     # 9 AM
CALENDAR_WORK_END="17"      # 5 PM
CALENDAR_WORK_DAYS="1,2,3,4,5"  # Mon-Fri (0=Sun, 6=Sat)
CALENDAR_TIMEZONE="America/New_York"
CALENDAR_DEFAULT_DURATION="30"  # minutes
CALENDAR_BUFFER="15"           # minutes between meetings
CALENDAR_MAX_ADVANCE_DAYS="14" # how far ahead can book
CALENDAR_MIN_NOTICE_HOURS="24" # minimum notice required

